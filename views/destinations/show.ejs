<head>
    <title>Show</title>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <!-- Make sure to include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<!-- Look at app.ts for app.use(express.static('public'));, which allows stars stylesheet to work -->

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card" style="width: 100%;">
                <!-- <img src="<%= destination.images %>" alt="Destination Image" class="card-img-top" style="max-width: 100%; height: auto;">   -->
                <!-- This shit don't work no more -->


                <div class="card" style="width: 100%;">
                    <% if (destination.images && destination.images.length > 0) { %>
                        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <% destination.images.forEach((image, index) => { %>
                                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                        <img src="<%= image.url %>" class="d-block w-100" alt="Destination Image">
                                    </div>
                                <% }) %>
                            </div>
                            <% if (destination.images.length > 1) { %>
                                <!-- Only show controls if there's more than 1 image -->
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            <% } %>
                        </div>
                    <% } else { %>
                        <p>No images available</p>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= destination.title %></h5>
                        <p class="card-text"><%= destination.description %></p>
                    </div>
                </div>
                

                <div class="card-body">
                    <h5 class="card-title">
                        <%= destination.title %>
                    </h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= destination.location %>
                    </li>
                    <li class="list-group-item">Submitted by <%= destination.author.username %>
                    </li>
                    <li class="list-group-item">$<%= destination.price %>
                    </li>
                    <li class="list-group-item">
                        <%= destination.description %>
                    </li>
                </ul>
                <% if(currentUser && destination.author.equals(currentUser._id)) { %>
                    <div class="card-body d-flex justify-content-between">
                        <a href="/destinations/<%= destination._id %>/edit" class="btn btn-info">Edit</a>
                        <form action="/destinations/<%= destination._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a href="/destinations" class="btn btn-secondary">Go Back</a>
                    </div>
                    <% } %>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Review Form -->
            <% if(currentUser) { %>
                <h2>Leave a review</h2>
                <form action="/destinations/<%= destination._id %>/reviews" method="POST" class="mb-3">
                    <fieldset class="starability-basic">
                        <legend>Rating:</legend>
                        <!-- Default rating set to 5 stars -->
                        <input type="radio" id="rate0" name="review[rating]" value="0" aria-label="No rating." />
                        <input type="radio" id="rate1" name="review[rating]" value="1" />
                        <label for="rate1" title="Terrible">1 star</label>
                        <input type="radio" id="rate2" name="review[rating]" value="2" />
                        <label for="rate2" title="Not good">2 stars</label>
                        <input type="radio" id="rate3" name="review[rating]" value="3" />
                        <label for="rate3" title="Average">3 stars</label>
                        <input type="radio" id="rate4" name="review[rating]" value="4" />
                        <label for="rate4" title="Very good">4 stars</label>
                        <input type="radio" id="rate5" name="review[rating]" value="5" checked />
                        <label for="rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" required></textarea>
                        <div class="valid-feedback">Looks good</div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% } %>

                    <!-- Reviews List -->
                    <% if (destination.reviews.length> 0) { %>
                        <h3>Reviews</h3>
                        <div class="row">
                            <% for (let review of destination.reviews.slice().reverse()) { %>
                                <div class="col-12 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <p class="card-title font-weight-bold">
                                                <%= review.author.username %>
                                            </p>
                                            <p class="starability-result" data-rating="<%= review.rating %>">
                                                Rated <%= review.rating %> stars
                                            </p>
                                            <p class="card-text">
                                                <%= review.body %>
                                            </p>
                                            <% if (currentUser && review.author.equals(currentUser._id)) { %>
                                                <form
                                                    action="/destinations/<%= destination._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    method="POST">
                                                    <button class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                        <% } else { %>
                            <p>No reviews yet.</p>
                            <% } %>

