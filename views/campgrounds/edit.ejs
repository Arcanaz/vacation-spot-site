<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Campground</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <input class="form-control" type="text" id="price" name="campground[price]" value="<%= campground.price %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Add Images</label>
                        <input type="file" id="images" name="campground[images]" multiple>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="campground[description]" rows="4" cols="50" required><%= campground.description %></textarea>
                    </div>

                    <div class="mb-3 row">
                        <% campground.images.forEach(function(img, i) { %>
                            <div class="col-6 col-md-4 col-lg-3 mb-3 text-center"> <!-- Column layout for images -->
                                <div class="img-container">
                                    <img src="<%= img.url %>" alt="Campground Image" class="img-fluid img-thumbnail" 
                                        style="width: auto; height: 150px; object-fit: contain;"> <!-- Fixed height, maintain aspect ratio -->
                                </div>
                                <div class="form-check mt-2">
                                    <!-- Checkbox to select images for deletion -->
                                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>" class="form-check-input">
                                    <label class="form-check-label" for="image-<%= i %>">Delete</label>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    
                    

                    <!-- Align buttons side by side -->
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-outline-primary" type="submit">Update Campground</button>
                        <a class="btn btn-secondary" href="/campgrounds/<%= campground._id %>">Go back to campground</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
