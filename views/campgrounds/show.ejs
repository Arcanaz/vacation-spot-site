<div class="row mb-3">
    <div class="col-md-6">
        <div class="card" style="width: 100%;"> <!-- Adjusted width to 100% -->
            <img src="<%= campground.image %>" alt="Campground Image" style="max-width: 100%; height: auto;" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <%= campground.location %>
                </li>
                <li class="list-group-item">
                    $<%= campground.price %>
                </li>
                <li class="list-group-item">
                    <%= campground.description %>
                </li>
            </ul>
            <div class="card-body d-flex justify-content-between">
                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit</a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <a href="/campgrounds" class="card-link btn btn-secondary">Go Back</a>
            </div>
        </div>
    </div>
    <div class="col-md-6"> <!-- Adjusted to col-md-6 -->
        <!-- Review Form -->
        <h2>Leave a review</h2>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate style="width: 100%;">
            <div class="mb-3">
                <label for="rating" class="form-label d-block">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" value="5" style="width: 100%;"><!-- Adjusted width -->
            </div>
            <div class="mb-3">
                <label class="form-label d-block" for="body">Review</label>
                <textarea class="form-control" name="review[body]" id="body" style="width: 100%;" required></textarea> <!-- Adjusted width -->
                <div class="valid-feedback">
                    Looks good
                </div>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>

        <!-- Reviews List -->
        <% for(let review of campground.reviews) { %>
            <div class="mb-3 card" style="width: 100%;"> <!-- Adjusted width -->
                <div class="card-body">
                    <h5 class="card-title">
                        Rating: <%= review.rating %>
                    </h5>
                    <p class="card-text">Review: <%= review.body %></p>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class=" btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>
