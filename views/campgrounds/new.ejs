<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Campground</title>
</head>

<body>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                </div>

                <!-- Price input with dollar sign -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input class="form-control" type="number" id="price" name="campground[price]" required>
                    </div>
                    <div class="invalid-feedback">
                        Please enter a price.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <div class="invalid-feedback">
                        Please enter a location.
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL (optional)</label>
                    <input class="form-control" type="text" id="imageURL" name="campground[image]">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" rows="4" cols="50" required></textarea>
                    <div class="invalid-feedback">
                        Please enter a description.
                    </div>
                </div>

                <!-- Align buttons side by side -->
                <div class="d-flex justify-content-between">
                    <button class="btn btn-outline-primary" type="submit">Add Campground</button>
                    <a class="btn btn-secondary" href="/campgrounds">Go back</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
